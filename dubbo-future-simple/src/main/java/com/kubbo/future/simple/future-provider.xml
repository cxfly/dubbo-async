<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	">

    <dubbo:application name="future-provider"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <dubbo:protocol name="dubbo" port="20880"/>

    <bean id="echoService" class="com.kubbo.future.simple.impl.EchoImpl"/>


    <bean id="s1" class="com.kubbo.future.simple.impl.S1Impl"/>
    <bean id="s2" class="com.kubbo.future.simple.impl.S2Impl"/>
    <bean id="s3" class="com.kubbo.future.simple.impl.S3Impl">
        <property name="s1" ref="s1" />
        <property name="s2" ref="s2"/>
    </bean>

    <dubbo:service interface="com.kubbo.future.simple.api.Echo" ref="echoService"/>

    <dubbo:service interface="com.kubbo.future.simple.api.S1" ref="s1"/>
    <dubbo:service interface="com.kubbo.future.simple.api.S2" ref="s2"/>
    <dubbo:service interface="com.kubbo.future.simple.api.S3" ref="s3"/>

</beans>